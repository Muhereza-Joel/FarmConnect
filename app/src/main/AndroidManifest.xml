<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/farmconnectlogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:targetApi="31">
        <service
            android:name=".services.BuyerAccountZoneFetchService"
            android:enabled="true"
            android:exported="false"></service>
        <service
            android:name=".services.FarmerAccountZonesFetchService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".activities.FinalizeSetupOfZonesActivity"
            android:exported="false" />
        <activity
            android:name=".activities.FinishSetUpActivity"
            android:exported="false" />

        <service
            android:name=".services.FetchContactsService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".services.UpdateZoneService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".services.DeleteZoneService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".activities.ZoneDetailsActivity"
            android:exported="false"
            android:parentActivityName=".activities.ProductsInAzoneActivity" />
        <activity
            android:name=".activities.EditZoneActivity"
            android:exported="false"
            android:parentActivityName=".activities.ProductsInAzoneActivity" />

        <service
            android:name=".services.ZoneUploadService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".activities.ProductsInAzoneActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.WelcomeActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AddProductToZoneActivity"
            android:exported="false"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.AddNewZoneActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.ChatActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.SelectContactActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".activities.CreateProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.AuthenticateUserActivity"
            android:exported="false"
            android:parentActivityName=".activities.InitializeAuthenticationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.InitializeAuthenticationActivity"
            android:exported="false"
            android:parentActivityName=".activities.WelcomeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.SplashScreenActivity"
            android:exported="true"
            android:label="FarmConnect">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>