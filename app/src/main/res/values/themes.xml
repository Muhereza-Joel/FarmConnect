<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FarmConnect" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryTeal</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorWhite</item>
        <item name="colorOnSecondary">@color/colorWhite</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">@color/colorPrimary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="MyTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorWhite</item>
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Customize the search icon color -->
        <item name="searchIcon">@drawable/baseline_search_24</item>
        <!-- Customize the close icon color -->
        <item name="closeIcon">@drawable/baseline_search_24</item>
        <!-- Customize the voice search icon color -->
        <item name="voiceIcon">@drawable/baseline_search_24</item>
        <!-- Customize the submit button color -->
        <!-- Customize the search text color -->
        <item name="android:textColor">@color/colorWhite</item>
        <!-- Customize the hint text color -->
        <item name="android:textColorHint">@color/colorWhite</item>
    </style>


</resources>