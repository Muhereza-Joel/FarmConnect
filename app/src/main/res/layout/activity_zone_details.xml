<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/grayWhite"
android:overScrollMode="never"
android:scrollbars="vertical"
tools:context=".activities.ZoneDetailsActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/products_in_a_zone_activity_toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/products_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="No products posted yet"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/products_in_a_zone_activity_toolbar"/>

</RelativeLayout>

</ScrollView>