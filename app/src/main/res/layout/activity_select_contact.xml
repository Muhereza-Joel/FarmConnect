<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayWhite"
    tools:context=".activities.ChatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/start_new_call_toolbar"
                layout="@layout/toolbar"/>

        </com.google.android.material.appbar.AppBarLayout>

        <Button
            android:id="@+id/create_new_contact_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/baseline_contacts_24"
            android:drawablePadding="5dp"
            android:gravity="left|center_vertical"
            android:paddingStart="10dp"
            android:text="@string/create_new_contact_button_label"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/create_new_group_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/baseline_group_24"
            android:drawablePadding="5dp"
            android:gravity="left|center_vertical"
            android:paddingStart="10dp"
            android:text="@string/create_new_group_button_label"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:text="Contacts on Farm Connect"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:tooltipText="Loading..."
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contacts_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

</RelativeLayout>