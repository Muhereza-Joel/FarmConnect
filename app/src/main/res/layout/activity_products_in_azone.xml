<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayWhite"
    android:overScrollMode="never"
    android:scrollbars="vertical"
    tools:context=".activities.ProductsInAzoneActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/products_in_a_zone_activity_toolbar"
            layout="@layout/toolbar" />

        <TextView
            android:id="@+id/products_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/products_in_a_zone_activity_toolbar"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="300dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:text="No products have been posted to this zone yet"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>